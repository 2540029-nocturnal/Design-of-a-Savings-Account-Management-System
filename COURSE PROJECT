#include <iostream>
#include <iomanip>
using namespace std;
int main() {
    int months;
    double annualTaxRate, initialBalance;
    cout << "Enter annual tax deduction rate (%): ";
    cin >> annualTaxRate;
    cout << "Enter initial account balance: ";
    cin >> initialBalance;
    cout << "Enter total number of months: ";
    cin >> months;
    double deposits[months], withdrawals[months], taxes[months];
    double balance = initialBalance;
    double totalDeposit = 0, totalWithdrawal = 0, totalTax = 0;
    double monthlyTaxRate = annualTaxRate / 12 / 100;
    for (int i = 0; i < months; i++) {
        cout << "\n--- Month " << (i + 1) << " ---\n";
        double deposit;
        do {
            cout << "Enter deposit amount: ";
            cin >> deposit;
            if (deposit < 0) cout << "Invalid! Deposit cannot be negative.\n";
        } while (deposit < 0);
        deposits[i] = deposit;
        balance += deposit;
        totalDeposit += deposit;
        double withdrawal;
        do {
            cout << "Enter withdrawal amount: ";
            cin >> withdrawal;
            if (withdrawal < 0) cout << "Invalid! Withdrawal cannot be negative.\n";
        } while (withdrawal < 0);
        withdrawals[i] = withdrawal;
        balance -= withdrawal;
        totalWithdrawal += withdrawal;
        double tax = balance * monthlyTaxRate;
        taxes[i] = tax;
        balance -= tax;
        totalTax += tax;
    }
    cout << "\n====== Account Summary ======\n";
    cout << fixed << setprecision(2);
    cout << "Final Balance: Rs " << balance << endl;
    cout << "Total Deposited: Rs " << totalDeposit << endl;
    cout << "Total Withdrawn: Rs " << totalWithdrawal << endl;
    cout << "Total Tax Deducted: Rs " << totalTax << endl;
    return 0;
}
